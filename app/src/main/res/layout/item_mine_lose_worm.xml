<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_12p"
    android:layout_marginRight="@dimen/size_12p"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_round4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8p"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginLeft="@dimen/size_12p">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快件码："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size16"/>

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QMCS234513123"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size16"/>

        </LinearLayout>

        <View
            style="@style/divier_style"
            android:layout_marginTop="@dimen/size_8p"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/size_8p"
            android:paddingTop="@dimen/size_8p"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p">

            <TextView
                android:id="@+id/weight_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="物品信息：10m³   10kg"
                android:textColor="@color/font_black333"
                android:textSize="@dimen/font_text_size16"/>

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="寄件地址：重庆南岸区西郊路"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginLeft="@dimen/size_12p"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8p"
            android:text="验收时间 2017.02.12 12:45"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_text_size16"
            android:layout_marginLeft="@dimen/size_12p"
            android:layout_marginRight="@dimen/size_12p"
            />

        <View
            style="@style/divier_style"
            android:layout_marginTop="@dimen/size_8p"
            />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快件丢失"
            android:textSize="@dimen/font_text_size16"
            android:textColor="@color/font_orange_red"
            android:layout_marginTop="@dimen/size_8p"
            android:paddingBottom="@dimen/size_8p"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginLeft="@dimen/size_12p"/>


    </LinearLayout>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginLeft="@dimen/size_4p"
        android:layout_marginRight="@dimen/size_4p"
        android:layout_marginTop="-1dp"
        />
</LinearLayout>