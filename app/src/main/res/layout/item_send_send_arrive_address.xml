<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_2p"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:paddingBottom="@dimen/size_8p"
              android:paddingTop="@dimen/size_8p">

    <CheckBox
        android:id="@+id/check"
        android:layout_width="@dimen/size_20p"
        android:layout_height="@dimen/size_20p"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_12p"
        android:background="@drawable/radio_group_selector"
        android:button="@null"/>

    <!--<CheckBox
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:fadingEdge="none"
        android:layout_marginLeft="@dimen/size_12p">



    </CheckBox>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_5p"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="快件码"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size14"/>

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="48dp"
                android:layout_toRightOf="@+id/title"
                android:text="QMCS58468941368"
                android:textColor="@color/font_orange_red"
                android:textSize="@dimen/font_text_size16"/>

        </RelativeLayout>

        <View
            style="@style/divier_style"
            android:layout_marginTop="@dimen/size_8p">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginTop="@dimen/size_5p">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="寄往："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size14"/>

            <TextView
                android:id="@+id/address_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="48dp"
                android:layout_toRightOf="@+id/address"
                android:text="重庆市渝中区马家堡52号重庆市渝中区马家堡52号"
                android:textColor="@color/font_new"
                android:textSize="@dimen/font_text_size15"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_12p"
            android:layout_marginTop="@dimen/size_5p">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="取件时间："
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size14"/>

            <TextView
                android:id="@+id/date_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_20p"
                android:layout_toRightOf="@+id/date"
                android:text="2017.04.01  12:40"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size14"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>