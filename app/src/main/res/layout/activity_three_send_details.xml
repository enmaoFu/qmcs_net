<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include layout="@layout/toolbar_white_layout"></include>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_round4"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:layout_marginTop="@dimen/size_12p"
                android:paddingBottom="@dimen/size_12p">

                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_12p">

                    <RelativeLayout
                        android:id="@+id/img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="@dimen/size_12p"
                        android:background="@drawable/re_round"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logistic_trans"
                            android:padding="@dimen/size_10p"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toRightOf="@id/img"
                        android:layout_marginLeft="@dimen/size_12p"
                        android:layout_marginRight="@dimen/size_12p"
                        android:layout_marginTop="@dimen/size_12p"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快件已到达 重庆转运中心"
                            android:textSize="@dimen/font_text_size18"
                            android:textColor="@color/colorAccent"/>

                        <TextView
                            android:id="@+id/name_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申通快递 456981235789657489"
                            android:layout_alignParentBottom="true"
                            android:textSize="@dimen/font_text_size15"
                            android:textColor="@color/font_gray"/>

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条形码：QMCS 0213 4567 2135"
                    android:textSize="@dimen/font_text_size15"
                    android:textColor="@color/font_gray"
                    android:layout_marginLeft="@dimen/size_12p"
                    android:layout_marginRight="@dimen/size_12p"
                    android:layout_marginTop="@dimen/size_12p"
                    android:layout_below="@id/top"
                    android:paddingTop="@dimen/size_5p"
                    android:paddingBottom="@dimen/size_5p"/>

                <TextView
                    android:id="@+id/hw_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物详情"
                    android:textSize="@dimen/font_text_size15"
                    android:textColor="@color/font_black333"
                    android:drawableRight="@drawable/checkmore_arrow_right"
                    android:drawablePadding="@dimen/size_5p"
                    android:layout_marginLeft="@dimen/size_12p"
                    android:layout_marginRight="@dimen/size_12p"
                    android:layout_marginTop="@dimen/size_12p"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/top"
                    android:paddingTop="@dimen/size_5p"
                    android:paddingBottom="@dimen/size_5p"/>

            </RelativeLayout>

            <ImageView
                style="@style/bg_shadow"
                android:layout_marginLeft="@dimen/size_16p"
                android:layout_marginRight="@dimen/size_16p"
                android:layout_marginTop="-1dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="@dimen/size_12p"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:layout_marginTop="@dimen/size_12p"
                android:background="@drawable/shape_white_round4">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物流详情"
                    android:textSize="@dimen/font_text_size16"
                    android:textColor="@color/font_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_logistic"
                    android:layout_below="@id/details"
                    android:layout_marginTop="@dimen/size_12p">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_40p"
                        android:layout_centerVertical="true">

                        <LinearLayout
                            android:id="@+id/left_spot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/size_12p">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/logistic_locate"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/left_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发送"
                                android:textSize="@dimen/font_text_size12"
                                android:textColor="@color/font_gray"
                                android:layout_gravity="center"
                                android:maxEms="6"
                                android:singleLine="true"
                                android:ellipsize="end"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_2p"
                            android:background="@color/font_orange_red"
                            android:layout_toRightOf="@+id/left_spot"
                            android:layout_toLeftOf="@+id/right_spot"
                            android:layout_centerVertical="true"></View>


                        <LinearLayout
                            android:id="@+id/right_spot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/size_12p">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/logistic_locate"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/right_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发送"
                                android:textSize="@dimen/font_text_size12"
                                android:textColor="@color/font_gray"
                                android:layout_gravity="center"
                                android:maxEms="6"
                                android:singleLine="true"
                                android:ellipsize="end"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

            <ImageView
                style="@style/bg_shadow"
                android:layout_marginLeft="@dimen/size_16p"
                android:layout_marginRight="@dimen/size_16p"
                android:layout_marginTop="-1dp"/>

            <com.and.yzy.frame.view.listview.ListViewForScrollView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_12p"
                android:layout_marginLeft="@dimen/size_12p"
                android:layout_marginRight="@dimen/size_12p"
                android:layout_marginBottom="@dimen/size_12p"
                android:scrollbars="none"
                android:divider="@null">
            </com.and.yzy.frame.view.listview.ListViewForScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>