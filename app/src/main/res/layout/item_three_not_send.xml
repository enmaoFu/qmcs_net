<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginRight="@dimen/size_12p"
              android:layout_marginLeft="@dimen/size_12p"
              android:layout_marginTop="@dimen/size_10p"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_round4"
        android:padding="@dimen/size_12p">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/size_10p"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:text="快件码:"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:text="QMCS234513123"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_orange_red"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            style="@style/dotted_style"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/size_10p"
            android:paddingTop="@dimen/size_10p"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:text="寄往:"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:text="重庆南坪街道重庆南坪"
                android:textSize="@dimen/font_text_size16"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/font_black333"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:text="取件时间:"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:text="2017.03.02 20:34"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_gray"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            style="@style/dotted_style"
            android:layout_marginTop="@dimen/size_10p"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/re_round_accent4"
            android:paddingBottom="@dimen/size_8p"
            android:paddingLeft="@dimen/size_12p"
            android:paddingRight="@dimen/size_12p"
            android:paddingTop="@dimen/size_8p"
            android:text="代发派件"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/size_12p"/>

    </LinearLayout>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="@dimen/size_4p"
        android:layout_marginRight="@dimen/size_4p"
        />

</LinearLayout>
