<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_13p"
                android:text="当前网点"
                android:textColor="@color/font_black666"
                />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50p"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p"
                android:text="重庆南岸区网点"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40p"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12p"
                android:text="更多网点"
                android:textColor="@color/font_black666"
                />

            <com.and.yzy.frame.view.listview.ListViewForScrollView
                android:id="@+id/lv_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:listSelector="@color/white"
                android:divider="@color/divier_color"
                android:dividerHeight="0.5dp"
                android:paddingLeft="@dimen/size_12p"
                android:scrollbars="none">

            </com.and.yzy.frame.view.listview.ListViewForScrollView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>