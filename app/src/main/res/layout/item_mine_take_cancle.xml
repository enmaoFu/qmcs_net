<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_12p"
    android:layout_marginRight="@dimen/size_12p"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_round4"
        android:paddingRight="@dimen/size_12p"
        android:paddingLeft="@dimen/size_12p"
        android:paddingBottom="@dimen/size_12p">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12p"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单编号   32949729941236"
                android:textColor="@color/font_gray"
                android:id="@+id/tv_order_number"
                android:textSize="@dimen/font_text_size12"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.12.30-12:00:00"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size12"
                android:id="@+id/tv_time"
                />

        </LinearLayout>


        <View
            style="@style/dotted_style"
            android:layout_marginBottom="@dimen/size_12p"
            android:layout_marginTop="@dimen/size_12p">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品信息：10m 5kg"
            android:id="@+id/tv_msg"
            android:textColor="@color/font_black333"
            android:textSize="@dimen/font_text_size16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/size_6p"
            android:layout_marginTop="@dimen/size_6p"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寄件地址："
                android:textColor="@color/font_black333"
                android:textSize="@dimen/font_text_size16"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="重庆市南岸区南坪东路48号"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/font_black333"
                android:textSize="@dimen/font_text_size16"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_time_un"
                android:drawablePadding="@dimen/size_5p"
                android:gravity="center_vertical"
                android:text="今日10:00取件"
                android:textColor="@color/font_hint"
                android:textSize="@dimen/font_text_size16"
                android:id="@+id/tv_take_time"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_adress"
                android:drawablePadding="@dimen/size_5p"
                android:gravity="center_vertical"
                android:text="300m"
                android:id="@+id/tv_distance"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_text_size16"
                />

        </LinearLayout>


        <View
            style="@style/dotted_style"
            android:layout_marginBottom="@dimen/size_12p"
            android:layout_marginTop="@dimen/size_12p">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用户取消发件"
                android:id="@+id/tv_state"
                android:textSize="@dimen/font_text_size16"
                android:textColor="@color/font_orange_red"
                />

            <!--<TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/re_round_accent4"
                android:paddingBottom="@dimen/size_8p"
                android:paddingLeft="@dimen/size_12p"
                android:paddingRight="@dimen/size_12p"
                android:paddingTop="@dimen/size_8p"
                android:text="扫描取件"
                android:textColor="@color/white"
                />-->

        </LinearLayout>


    </LinearLayout>

    <ImageView
        style="@style/bg_shadow"
        android:layout_marginLeft="@dimen/size_4p"
        android:layout_marginRight="@dimen/size_4p"
        android:layout_marginTop="-1dp"
        />
</LinearLayout>