<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_gray"
                android:text="15:40"
                />
            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_hint"
                android:text="2017.03.04"
                android:layout_marginTop="@dimen/size_2p"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_10p"
        >
        <View

            android:layout_width="2dp"
            android:layout_height="0dp"
            android:id="@+id/v_top"
            android:background="@color/divier_color"
            android:layout_weight="1"/>
        <View
            android:id="@+id/sopt"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_circle_wuniu"/>
        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:id="@+id/v_bottom"
            android:background="@color/divier_color"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_msg"
        android:text="传送天使进行打包发布"
        android:textColor="@color/font_hint"
        android:layout_marginLeft="@dimen/size_10p"
        />



</LinearLayout>